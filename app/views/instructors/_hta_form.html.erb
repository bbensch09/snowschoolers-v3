
<!-- REGISTER -->
<div id="apply" class="navy-text">
 <div class="apply-container">
  <%= form_for @instructor do |f| %>
  <% if @instructor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@instructor.errors.count, "error") %> prohibited this instructor from being saved:</h2>

      <ul>
      <% @instructor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="complete-instructor-bio-section">    
    <h4><b>Contact Info</b> </h4>
    <div class="col-md-6 vertical-padding">
      <%= f.text_field :first_name, placeholder: 'First name', class: 'form-control', required:true %>
    </div>
    <div class="col-md-6 vertical-padding">
      <%= f.text_field :last_name, placeholder: 'Last name', class: 'form-control', required:true %>
    </div>
  </div>
  <div class="">
    <div class="col-md-6 vertical-padding">
      <% if current_user %>
      <%= f.text_field :username, value: current_user.email, class: 'form-control', required:true %>
        <% else %>
              <%= f.text_field :username, placeholder: "email@example.com", class: 'form-control', required:true %>
      <% end %>
    </div>
    <div class="col-md-6 vertical-padding">
      <%= f.text_field :phone_number, placeholder: 'Phone number', class: 'form-control' %>
    </div>
  </div>
  <div class="col-md-6">
  <h4> Where did you grow up? </h4>
    <%= f.text_field :city, placeholder: 'i.e. Tahoe City, CA', class: 'form-control', required:true %>
    <br><br>
  </div>
  <div class="col-md-6">
  <h4> Please confirm that you are available for all dates below: </h4>
      
      <input type="hidden" name="sport_ids" value="">
        <div class="collection-check-box form-control">
          <input type="checkbox" value="1" name="instructor[sport_ids][]" id="instructor_sport_ids_1">
          <label for="instructor_sport_ids_1">Friday November 30th</label>
        </div>
        <div class="collection-check-box form-control">
          <input type="checkbox" value="1" name="instructor[sport_ids][]" id="instructor_sport_ids_1">
          <label for="instructor_sport_ids_1">Saturday Dec 1st</label>
        </div>
        <div class="collection-check-box form-control">
          <input type="checkbox" value="1" name="instructor[sport_ids][]" id="instructor_sport_ids_1">
          <label for="instructor_sport_ids_1">Sunday Dec 2nd</label>
        </div>
        <div class="collection-check-box form-control">
          <input type="checkbox" value="1" name="instructor[sport_ids][]" id="instructor_sport_ids_1">
          <label for="instructor_sport_ids_1">Saturday Dec 8th</label>
        </div>

    <br><br>
  </div>
 
  <h4><b>Ability level</b> (Intermediate, Advanced, Expert, Racing/Freestyle athlete, etc.) </h4>
  <div class="col-md-12">
    <%= f.text_field :certification, placeholder: 'What is your skiing background', class: 'form-control', required:true %>
    <br>
  </div>
  <h4><b>Why</b> are you interested in joining Snow Schoolers?</h4>
  <div class="col-md-12">
    <%= f.text_area :intro, rows:5, placeholder: 'Describe your background in a few sentences', class: 'form-control', required:true %>
    <br>
  </div>
  <h4><b>How</b> did you first hear about this Accelerated Instructor Certification Program?</h4>
  <div class="col-md-6">
    <%= f.select :how_did_you_hear, [['From a Friend',1],['Facebook',2],['Google',3],['Email',4],['Linkedin',5],['Other',100]], {}, {class: 'form-control', required:true, include_blank:false} %>
  </div>
  <%= hidden_field_tag 'ga_client_id', '', :class => 'ga-client-id' %>
  <%= f.text_field :bio, value: "hta_candidate", class: 'hidden form-control', required:true %>
  <div class="row">
    <div class="col-md-12 vertical-padding">
      <% if controller.action_name == 'edit' %>
      <%= f.submit "Update Instructor Profile", class: "btn btn-primary btn-xl page-scroll pull-right push-bottom" %>
      <% else %>
      <%= f.submit "Submit Application", class: "btn btn-primary btn-xl page-scroll pull-right push-bottom" %>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
<div class="spacer">
</div>

</div>
<!-- /REGISTER -->
