<div id="middle" class="container">
  <div class="white">

<p id="notice"><%= notice %></p>

<h1>Skills</h1>

<table>
  <thead>
    <tr>
      <th>Sport</th>
      <th>Name</th>
      <th>Description</th>
      <th>Ability category</th>
      <th>Ability level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @skills.each do |skill| %>
      <tr>
        <td><%= skill.sport_id %></td>
        <td><%= skill.name %></td>
        <td><%= skill.description %></td>
        <td><%= skill.ability_category %></td>
        <td><%= skill.ability_level %></td>
        <td><%= link_to 'Show', skill %></td>
        <td><%= link_to 'Edit', edit_skill_path(skill) %></td>
        <td><%= link_to 'Destroy', skill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Skill', new_skill_path %>
</div>
</div>