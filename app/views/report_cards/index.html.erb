<div id="middle" class="container">
  <div class="white">
<p id="notice"><%= notice %></p>

<h1>Report Cards</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Lesson</th>
      <th>Instructor</th>
      <th>Attitude grade</th>
      <th>Safety grade</th>
      <th>Effort grade</th>
      <th>Ability level</th>
      <th>Activty</th>
      <th>Qualitative feeback</th>
      <th>Balance</th>
      <th>Edge control</th>
      <th>Pressure control</th>
      <th>Rotary control</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @report_cards.each do |report_card| %>
      <tr>
        <td><%= report_card.student_id %></td>
        <td><%= report_card.lesson_id %></td>
        <td><%= report_card.instructor_id %></td>
        <td><%= report_card.attitude_grade %></td>
        <td><%= report_card.safety_grade %></td>
        <td><%= report_card.effort_grade %></td>
        <td><%= report_card.ability_level %></td>
        <td><%= report_card.activty %></td>
        <td><%= report_card.qualitative_feeback %></td>
        <td><%= report_card.balance %></td>
        <td><%= report_card.edge_control %></td>
        <td><%= report_card.pressure_control %></td>
        <td><%= report_card.rotary_control %></td>
        <td><%= link_to 'Show', report_card %></td>
        <td><%= link_to 'Edit', edit_report_card_path(report_card) %></td>
        <td><%= link_to 'Destroy', report_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Report Card', new_report_card_path %>
</div>
</div>