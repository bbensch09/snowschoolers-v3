
<section id="#book-a-lesson" class="bg-navy center-content lesson-new-form-header">
      <h1 class="center text-white">
        *Please note* Lessons for the 19/20 lesson are not yet on sale. <br> Reservations will be accepted starting Nov 4th! 
      </h1>

      <% if @promo_location.nil? %>
        <h2> At which mountain would you like to book a lesson? </h2>
          <a href="/book/granlibakken" class="btn btn-primary btn-lg page-scroll powder-btn">Book at Granlibakken</a>
          <a href="/book/homewood" class="btn btn-primary btn-lg page-scroll powder-btn">Book at Homewood</a>
          <% @resort_name = 'SNOWSCHOOLERS' %>
        <% else %>
          <!-- <p class="alert">The promo_location is set to: %=@promo_location%> </p> -->
          <% @resort_name = Location.find(@promo_location).name.upcase %>
      <% end %>
</section>

<section class="bg-primary lesson-new-form-header">
  
<%= semantic_form_for @lesson do |f| %>
  <div class="lesson-form-container">
    
      <% if alert %>
        <div id="alert2" class="alert alert-danger alert-dismissible fade in" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
         <p> <%= alert %> <%= notice %> </p>
        </div>
      <% end %>


