<div id="middle" class="container">
  <div class="white">

<h1>All Equipment</h1>

<% if @resources.present? %>
<% else %>
  <p>There are no equipment resources that have been loaded.</p>
<% end %>

<hr class="deposit-hr-navy">
<%= form_tag import_resources_path, multipart: true do %>
<h2>
  <%= file_field_tag :file, class: 'form-control' %> <%= submit_tag "Import resources from CSV", class: 'btn btn-default' %>
<% end %> | 
  <%= link_to "Export CSV", resources_path(format: "csv"), class: 'btn btn-primary' %> |  <%= link_to 'Delete resources Database', delete_all_resources_path, method: :delete_all, data: { confirm: 'Are you sure?' },  class: 'btn btn-danger' %>
</h2>


    <table class="instructors-table">
      <thead>
        <tr>
          <th>Type</th>
          <th>gb_identifier</th>
          <th>manufacturer</th>
          <!-- <th>board_model</th> -->
          <!-- <th>binding_model</th> -->
          <th>is_boot</th>
          <th>boot_size</th>
          <th>board_size</th>
          <th>status</th>
          <th>ss_unique_identifier</th>
          <th>non_unique_identifier</th>
          <th>walk_in_only</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @resources.each do |resource| %>
        <tr>
          <td><%= resource.resource_type %></td>
          <td><%= resource.gb_identifier %></td>
          <td><%= resource.manufacturer %></td>
          <!-- <td><%= resource.board_model %></td> -->
          <!-- <td><%= resource.binding_model %></td> -->
          <td><%= resource.is_boot %></td>
          <td><%= resource.boot_size %></td>
          <td><%= resource.board_size %></td>
          <td><%= resource.status %></td>
          <td><%= resource.ss_unique_identifier %></td>
          <td><%= resource.non_unique_identifier %></td>
          <td><%= resource.walk_in_only %></td>
          <td><%= link_to 'Show', resource %></td>
          <td><%= link_to 'Edit', edit_resource_path(resource) %></td>
          <td><%= link_to 'Destroy', resource, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Resource', new_resource_path, class: 'btn btn-default' %>
  </div>
</div>