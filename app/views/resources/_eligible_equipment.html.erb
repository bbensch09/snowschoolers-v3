<h1>Available Equipment</h1>

<% if resources.present? %>
<% else %>
  <p class="text-warning">There are no matching equipment resources available.</p>
<% end %>

    <table class="instructors-table">
      <thead>
        <tr>
          <th>Type</th>
          <th>gb_identifier</th>
          <th>manufacturer</th>
          <th>boot_size</th>
          <th>board_size</th>
          <th>status</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% resources.each do |resource| %>
        <tr>
          <td><%= resource.resource_type %></td>
          <td><%= resource.gb_identifier %></td>
          <td><%= resource.manufacturer %></td>
          <td><%= resource.boot_size %></td>
          <td><%= resource.board_size %></td>
          <td><%= resource.status %></td>
          <td><%= link_to 'Select Equipment for this Rental', select_resource_path(@rental.id,resource.id),  :method => "put", class: 'btn btn-primary' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
