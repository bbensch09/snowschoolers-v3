<!-- old pricing from 2019 -->
<% if Location.find(24).partner_status == 'Inactive' %>
    <% granlibakken_class = 'hidden' %>
  <% else %>
    <% granlibakken_class = '' %>
<% end %>

<section id="prices_simple" class="pricing-new-lesson">
    <h1 class="text-left">
        <span><a href="#book-a-group-lesson" class="btn btn-primary">See Group Lesson Rates</a></span>
    </h1>
    <div class="pricing-container">
          <% if (Product.where(location_id:8,length:"1.00",product_type:'private_lesson').first == nil || Product.where(location_id:24,length:"1.00",product_type:'private_lesson').first == nil) %>
          <h3 class='text-danger center'> Pricing Not Yet Available </h3>
          <% else %>
        <table class="col-lg-12 col-xs-12 pricing-table">
          <thead class="">
            <tr>
                <th class="center price-header" colspan="6">
                    <h1 class="navy-text">
                        <span>2018/19 PRIVATE LESSON RATES</span>
                    </h1>
                    <h3 class="center navy-text">Book Early and Save over 50% Compared to Other Resorts</h3>
                </th>
            </tr>
            
            <tr class="price-schools">
              <th class="col-xs-2 text-warning center">*<%=Location.find(24).calendar_status %> pricing* </th>
              <!--<th class="col-xs-2 text-warning center">*January Sale Pricing Until Jan 24th* </th> -->
              <th class="pricing-snowschoolers col-xs-2">Homewood* <br> <span class="">(Lesson-only)</span> </th>
              <th class="pricing-snowschoolers col-xs-2">Granlibakken** <br> <span class="">(Lesson-only)</span> </th>
              <th class="pricing-snowschoolers col-xs-2 <%=granlibakken_class %>">Granlibakken** <br> <span class="">(Lift + Rentals)</span> </th>
              <th class="hidden-unless-desktop pricing-competitors-names">Northstar </th>
              <th class="hidden-unless-desktop pricing-competitors-names">Squaw Valley</th>
            </tr>
          </thead>

          <tbody>
            <tr>
                <td class="grey-side-borders pricing-length pricing-grey-background">Early-bird (9-10am)</td>
                <td class="grey-side-borders pricing-snowschoolers pricing-grey-background">
                    <%= number_to_currency(Product.where(location_id:8,length:"1.00",product_type:'private_lesson',calendar_period:Location.find(8).calendar_status).first.price, :precision => 0) %>
                </td>
                <td class="grey-side-borders pricing-snowschoolers pricing-grey-background ">
                    <%= number_to_currency(Product.where(location_id:24,length:"1.00",product_type:'private_lesson',calendar_period:Location.find(24).calendar_status).first.price, :precision => 0) %>
                </td>
                <td class="grey-side-borders pricing-snowschoolers pricing-grey-background <%=granlibakken_class %>">
                    <%= number_to_currency(Product.where(location_id:24,length:"1.00",product_type:'private_lesson',is_rental:true,calendar_period:Location.find(24).calendar_status).first.price, :precision => 0) %>
                </td>
                <td class="hidden-unless-desktop grey-side-borders pricing-competitors pricing-grey-background">N/A</td>
                <td class="hidden-unless-desktop grey-side-borders pricing-competitors pricing-grey-background">N/A</td>
            </tr>
            <tr>
                <td class="grey-side-borders pricing-length">Half-day (10-12:45pm; 1:15-4pm)</td>
                <td class="grey-side-borders pricing-snowschoolers">
                <%= number_to_currency(Product.where(location_id:8,length:"3.00",product_type:'private_lesson',calendar_period:Location.find(8).calendar_status).first.price, :precision => 0) %>
                </td>
                <td class="grey-side-borders pricing-snowschoolers ">
                <%= number_to_currency(Product.where(location_id:24,length:"3.00",product_type:'private_lesson',calendar_period:Location.find(24).calendar_status).first.price, :precision => 0) %> 
                </td>
                <td class="grey-side-borders pricing-snowschoolers <%=granlibakken_class %>">
                <%= number_to_currency(Product.where(location_id:24,length:"3.00",product_type:'private_lesson',is_rental:true,calendar_period:Location.find(24).calendar_status).first.price, :precision => 0) %>
                </td>
                <td class="hidden-unless-desktop pricing-competitors">$620</td>
                <td class="hidden-unless-desktop pricing-competitors">$539</td>
            </tr>
            <tr>
                <td class="grey-side-borders pricing-length pricing-grey-background">Full-day (10-4pm)</td>
                <td class="grey-side-borders pricing-snowschoolers pricing-grey-background">
                <%= number_to_currency(Product.where(location_id:8,length:"6.00",product_type:'private_lesson',calendar_period:Location.find(8).calendar_status).first.price, :precision => 0) %>
                </td>
                <td class="grey-side-borders pricing-snowschoolers pricing-grey-background ">
                <%= number_to_currency(Product.where(location_id:24,length:"6.00",product_type:'private_lesson',calendar_period:Location.find(24).calendar_status).first.price, :precision => 0) %>
                </td>
                <td class="grey-side-borders pricing-snowschoolers pricing-grey-background <%=granlibakken_class %>">
                <%= number_to_currency(Product.where(location_id:24,length:"6.00",product_type:'private_lesson',is_rental:true,calendar_period:Location.find(24).calendar_status).first.price, :precision => 0) %>
                </td>
                <td class="hidden-unless-desktop grey-side-borders pricing-competitors pricing-grey-background">$900</td>
                <td class="hidden-unless-desktop grey-side-borders pricing-competitors pricing-grey-background">$759</td>
            </tr>
          </tbody>
          <% end %>
        </table>
        
    </div>
</section>
