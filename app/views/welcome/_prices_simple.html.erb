<section id="" class="pricing-new-lesson">
    <div class="">        
        <h1 class="center navy-text">Book Early and Save over 50%</h1>
        <table class="col-lg-12 col-xs-12 pricing-table">
          <thead class="">
            <tr>
                <th class="center price-header" colspan="5">
                    <h1>2017/18 PRIVATE LESSON RATES</h1>
                </th>
            </tr>
            <tr class="">
              <th class="col-xs-2"> </th>
              <th class="pricing-snowschoolers col-xs-2">Snow Schoolers <br> <span class="homewood-pricing">(at Homewood)</span> </th>
              <th class="pricing-snowschoolers col-xs-2">Snow Schoolers <br> <span class="homewood-pricing">(at Granlibakken)</span> </th>
              <th class="pricing-competitors-names col-xs-2">Northstar</th>
              <th class="pricing-competitors-names col-xs-2">Squaw Valley</th>
            </tr>
          </thead>

          <% if (Product.where(location_id:8,length:"1.00",product_type:'private_lesson',calendar_period:Location.find(8).calendar_status).first == nil || Product.where(location_id:24,length:"1.00",product_type:'private_lesson',calendar_period:Location.find(24).calendar_status).first == nil) %>
          <h1 class='text-danger center'> Pricing Not Yet Available </h1>

          <% else %> 

          <tbody>
            <tr>
                <td class="pricing-length">Early-bird (9-10am)</td>
                <td class="pricing-snowschoolers">
                    <%= number_to_currency(Product.where(location_id:8,length:"1.00",product_type:'private_lesson',calendar_period:Location.find(8).calendar_status).first.price, :precision => 0) %>
                </td>
                <td class="pricing-snowschoolers">
                    <%= number_to_currency(Product.where(location_id:24,length:"1.00",product_type:'private_lesson',calendar_period:Location.find(24).calendar_status).first.price, :precision => 0) %>
                </td>
                <td class="pricing-competitors">N/A</td>
                <td class="pricing-competitors">N/A</td>
            </tr>
            <tr>
                <td class="pricing-length">Half-day (10-1pm; 1-4-pm)</td>
                <td class="pricing-snowschoolers">
                <%= number_to_currency(Product.where(location_id:8,length:"3.00",product_type:'private_lesson',calendar_period:Location.find(8).calendar_status).first.price, :precision => 0) %>
                </td>
                <td class="pricing-snowschoolers">
                <%= number_to_currency(Product.where(location_id:24,length:"3.00",product_type:'private_lesson',calendar_period:Location.find(24).calendar_status).first.price, :precision => 0) %>
                </td>
                <td class="pricing-competitors">$595</td>
                <td class="pricing-competitors">$519</td>
            </tr>
            <tr>
                <td class="pricing-length">Full-day (10-4pm)</td>
                <td class="pricing-snowschoolers">
                <%= number_to_currency(Product.where(location_id:8,length:"6.00",product_type:'private_lesson',calendar_period:Location.find(8).calendar_status).first.price, :precision => 0) %>
                </td>
                <td class="pricing-snowschoolers">
                <%= number_to_currency(Product.where(location_id:24,length:"6.00",product_type:'private_lesson',calendar_period:Location.find(24).calendar_status).first.price, :precision => 0) %>
                </td>
                <td class="pricing-competitors">$810</td>
                <td class="pricing-competitors">$739</td>
            </tr>
          </tbody>
          <% end %>
        </table>
        <div class="row col-md-12 price-details">
            <h4 class="italic">
            *Prices <b>at Homewood do not include </b> your lift ticket and/or rental equipment. Please ask about available packages.
            <br> 
            **You may include <b>up to 5 people in any private lesson</b> at no additional charge.
            <br>
            </h4>            
        </div>
    </div>    
</section>