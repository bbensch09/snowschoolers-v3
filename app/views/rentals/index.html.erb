<div id="middle" class="container">
  <div class="white">

    <h1>Rentals</h1>

    <table class="instructors-table">
      <thead>
        <tr>
          <th>Rental ID</th>
          <th>Lesson</th>
          <th>Student</th>
          <th>Equipment Type</th>
          <th>Equipment ID</th>
          <th>Status</th>
          <th>Other</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @rentals.each do |rental| %>
        <tr>
          <td><%= rental.id %></td>
          <td><%= rental.lesson_id %></td>
          <td><%= rental.student_id %></td>
          <td><%= rental.resource_type %></td>
          <td><%= rental.resource_id %></td>
          <td><%= rental.status %></td>
          <td><%= rental.other %></td>
          <td><%= link_to 'Show', rental %></td>
          <td><%= link_to 'Edit', edit_rental_path(rental) %></td>
          <td><%= link_to 'Destroy', rental, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Rental', new_rental_path %>
  </div>
</div>